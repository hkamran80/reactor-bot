{
    "name": "ts-starter",
    "version": "1.0.0",
    "description": "A starter for TypeScript projects",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint . --ext .ts --fix",
        "format": "prettier ./src/ --write",
        "build": "rimraf ./dist && tsc",
        "start": "npm run build && cd dist && node --es-module-specifier-resolution=node index.js"
    },
    "keywords": [
        "typescript",
        "starter",
        "ts-starter",
        "typescript-starter"
    ],
    "author": {
        "name": "H. Kamran",
        "email": "hkamran@hkamran.com",
        "url": "https://hkamran.com"
    },
    "license": "GPLv3",
    "dependencies": {},
    "devDependencies": {
        "@hkamran/prettier-config": "^1.1.1",
        "@types/node": "^17.0.18",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.5"
    },
    "prettier": "@hkamran/prettier-config"
}
